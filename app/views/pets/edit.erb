<h1>Update Pet</h1>

<form method="POST" action="/pets/<%=@pet.id%>">
  <label for="pet[name]">Name:</label>
  <input type="text" name="pet[name]" id="pet_name">

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <%@owners.each do |owner|%>
    <input type="checkbox" name="owner[name]" value="<%=owner.id%>" id="<%=owner.id%>"><%='checked' if @pet.owner==owner%><%=owner.name%></input>
  <%end%>

  <br></br>

  <label>and/or, create a new owner:</label>

  <br></br>
  <label for="owner.id">Name:</label>

  <input type="text" name="owner[name]" id="owner.id"></input>

  <br></br>

  <input type="submit" value="Update Pet">
</form>
